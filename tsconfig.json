{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": ["dom", "esnext", "es2017.object"],
    "outDir": "dest",
    "module": "commonjs",
    "strict": true,
    "noImplicitThis": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "files": ["./hardhat.config.ts"]
}
